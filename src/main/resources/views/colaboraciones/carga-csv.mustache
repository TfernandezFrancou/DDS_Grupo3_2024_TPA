    <div class="container">
        <div class="form-container">
            <h2 class="titulo">Cargar Colaboradores</h2>
            <form method="post" action="carga-csv/upload" enctype="multipart/form-data">
                <div class="csv-form">
                    <div class="file-upload" id="file-upload" style="min-height: 200px; margin-bottom: 30px;">
                        <p style="height: 100%;">Arrastra un archivo CSV o haz clic para seleccionar uno</p>
                        <input class="csv-input" type="file" id="csv" name="csv" accept=".csv" oninput="handleFile(this)">
                    </div>
                </div>
                <div class="button-container">
                    <button type="submit" class="button">Continuar</button>
                </div>
            </form>

        </div>
    </div>
</div>
<script>
    function handleFile(input) {
        if (input && input.files && input.files.length > 0) {
            const name = input.files[0].name;
            document.querySelector('div.csv-form p').innerHTML = name;
        }
    }
</script>
