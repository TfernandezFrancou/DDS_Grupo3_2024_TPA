<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Colaboraciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/mis-colaboraciones.css">
    <link rel="stylesheet" href="/styles/navegacion.css">
    <link rel="icon" type="image/x-icon" href="/views/imagenes/favicon.ico">
</head>
<body>

<div class="container">
    <header>
        <div class="logo-container">
            <img src="/views/imagenes/logo.png" alt="Logo" class="logo">
        </div>
        <nav>
            <ul>
                <li><a href="/carga-csv">Carga CSV</a></li>
                <li><a href="/colaboraciones" class="menu-select">Mis colaboraciones</a></li>
                {{#HacerseCargoDeUnaHeladera?}}
                    <li><a href="/heladeras/registrar">Registrar heladera</a></li>
                {{/HacerseCargoDeUnaHeladera?}}
                <li><a href="/heladeras">Heladeras</a></li>
                <li><a href="/puntos">Puntos</a></li>
                {{#DonacionDeViandas?}}
                    <li><a href="/donar-vianda">Donar viandas</a></li>
                {{/DonacionDeViandas?}}
                {{#DonacionDeDinero?}}
                    <li><a href="/donar-dinero">Donar dinero</a></li>
                {{/DonacionDeDinero?}}
                <li><a href="/reportes">Reportes</a></li>
                {{#RegistrarPersonasEnSituacionVulnerable?}}
                    <li><a href="/registrar-persona-vulnerable">Registrar persona</a></li>
                {{/RegistrarPersonasEnSituacionVulnerable?}}
                <li><a href="/usuarios/cerrar-sesion" class="text-danger">Cerrar Sesi√≥n</a></li>
            </ul>
        </nav>
        {{#foto-usuario}}
            <div class="user-container">
                <img src="{{foto-usuario}}" alt="Usuario" class="user">
            </div>
        {{/foto-usuario}}
    </header>

    <div class="container">
<!--        <section class="actions">-->
<!--            <a href="/carga-csv">Cargar CSV</a>-->
<!--        </section>-->

        <div class="container row mt-4">
            {{#colaboraciones}}
                {{#DonacionDeDinero}}
                    <div class="col-md-4">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-body">
                                <div class="icon">üí∞</div>
                                <h3>Donar Dinero</h3>
                                <p>Fecha: {{fechaFormateada}}</p>
                                <p>Monto: ${{monto}}</p>
                                {{#frecuencia}}
                                    <p>Frecuencia: cada {{frecuencia}} d√≠as</p>
                                {{/frecuencia}}
                            </div>
                        </div>
                    </div>
                {{/DonacionDeDinero}}
                {{#DonacionDeViandas}}
                    <div class="col-md-4">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-body">
                                <div class="icon">üçΩÔ∏è</div>
                                <h3>Donar Viandas</h3>
                                <p>Fecha: {{fechaFormateada}}</p>
                                <!-- <p>Tipo: ...</p> -->
                                <!-- <p>Calor√≠as: -</p> -->
                                <p>Cantidad: {{cantidadDeViandas}}</p>
                                <p>Heladera: {{heladera.nombre}}</p>
                                <!-- <p>Estado: Entregada</p> -->
                            </div>
                        </div>
                    </div>
                {{/DonacionDeViandas}}
                {{#DistribucionDeViandas}}
                    <div class="col-md-4">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-body">
                                <div class="icon">üì¶</div>
                                <h3>Distribuir Vianda</h3>
                                <p>Fecha: {{fechaFormateada}}</p>
                                <p>Origen: {{origen.nombre}}</p>
                                <p>Destino: {{destino.nombre}}</p>
                                <p>Cantidad: {{cantidad}}</p>
                                <p>Motivo: {{motivo}}</p>
                            </div>
                        </div>
                    </div>
                {{/DistribucionDeViandas}}
                {{#HacerseCargoDeUnaHeladera}}
                    <div class="col-md-4">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-body">
                                <div class="icon">üßä</div>
                                <h3>Hacerse cargo de heladeras</h3>
                                <p>Fecha: {{fechaFormateada}}</p>
                                <p>Heladeras:</p>
                                {{#heladerasColocadas}}
                                    <span>{{nombre}}</span>
                                {{/heladerasColocadas}}
                            </div>
                        </div>
                    </div>
                {{/HacerseCargoDeUnaHeladera}}
                {{#OfrecerProductos}}
                {{/OfrecerProductos}}
                {{#RegistrarPersonasEnSituacionVulnerable}}
                    <div class="col-md-4">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-body">
                                <div class="icon">üí≥</div>
                                <h3>Registrar Personas En Situacion Vulnerable</h3>
                                <p>Fecha: {{fechaFormateada}}</p>
                                <p>Tarjetas Entregadas:{{tarjetasEntregadas}} </p>
                                <p>Personas:</p>
                                {{#RegistrarPersonasEnSituacionVulnerable}}
                                    {{#personasRegistradas}}
                                        <span>{{nombre}}</span>
                                    {{/personasRegistradas}}
                                {{/RegistrarPersonasEnSituacionVulnerable}}
                            </div>
                        </div>
                    </div>
                {{/RegistrarPersonasEnSituacionVulnerable}}
            {{/colaboraciones}}
            {{^colaboraciones}}
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        No hay colaboraciones para mostrar
                    </div>
                </div>
            {{/colaboraciones}}
        </div>
    </div>
</div>
</body>
</html>
